#include "std_lib_facilities.h"

int ga[10]{1,2,4,8,16,32,64,128,256,512};

void f(int ga[],int arr)
	{
	int la[10];
		for(int i=0;i<10; ++i)
		{
		la[i]=ga[i];
		cout<<la[i]<<endl;
		}

	int* p= new int[arr];
		for(int i=0;i<arr;++i)
		{
		p[i]=ga[i];
		cout<<p[i]<<endl;
		}
		
	delete[]p;
	}


int main()
{

	//for(int i=0;i<10; ++i) (talán működhet)
	//{
	//ga[i]=pow(2,i);
	//cout<<ga[i]<<endl;
	//}

f(ga,10);
int aa[10];

	for(int i=1;i<10;++i)
	{
	aa[i]=aa[i-1]*aa[i+1];
	}
f(aa,10);
return 0;
}
