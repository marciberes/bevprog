#include "std_lib_facilities.h"

vector <double> v;
double num1,num2,num3,prod;
char muvelet;

void kiir(vector<double>v)
{
	for(int i=0; i<v.size(); i++)
	cout<<"\n";
}
int main()
{
cout<<"You can choose from the following operators: +, -, * or /"<<endl;
cout<<"If you want to exit, just type "" x ""as an operator!"<<endl;
	cout<<"Type in the first number"<<endl;
cin>>num1;
	cout<<"Type in the chosen operator"<<endl;
cin>>muvelet;
switch(muvelet){
case 'x':
		kiir(v);
		for (int i=0;i<v.size();i++)		//Exit parancs
		break;
return 0;
}
	cout<<"Type in the second number"<<endl;
cin>>num2;
	switch (muvelet){				//2 szám + operátor bekérése
	case '+':
		prod=num1+num2;	
		cout<<"The value is: "<<prod<<endl;
		v.push_back(prod);
		break;

	case '-':
		prod=num1-num2;
		cout<<"The value is: "<<prod<<endl;
		v.push_back(prod);
		break;

	case '*':
		prod=num1*num2;

		cout<<"The value is: "<<prod<<endl;
		v.push_back(prod);
		break;

	case '/':
		prod=num1/num2;
		cout<<"The value is: "<<prod<<endl;
		v.push_back(prod);
		break;
	default:
	cout<<"Unknown operator"<<endl;
	break;
}
while (cin){
	cout<<"Type in the chosen operator"<<endl;
cin>>muvelet;
switch(muvelet){
case 'x':
		kiir(v);
		for (int i=0;i<v.size();i++)
		cout<<"Latest results= "<<v[i]<<"\n";		//Exit parancs,kiiratás
		exit (1);
		break;
}
	cout<<"Type in a new number"<<endl;
cin>>num3;
	switch(muvelet){					//3. szám,operátor bekérése
	case '+':
		prod=prod+num3;	
		cout<<"The new value is: "<<prod<<endl;
		v.push_back(prod);
		break;
	case '-':
		prod=prod-num3;
		cout<<"The new value is: "<<prod<<endl;
		v.push_back(prod);
		break;

	case '*':
		prod=prod*num3;
		cout<<"The new value is: "<<prod<<endl;
		v.push_back(prod);
		break;

	case '/':
		prod=prod/num3;
		cout<<"The new value is: "<<prod<<endl;
		v.push_back(prod);
		break;
	
	default:
	cout<<"Oops! Unknown operator"<<endl;
	break;
}
}
}
